<AnchorPane id="AnchorPane" prefHeight="650.0" prefWidth="890.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="ch.bbbaden.casinopalace.blackjack.BlackJackController">
   <children>
      <HBox layoutX="14.0" layoutY="510.0" prefHeight="90.0" prefWidth="910.0" spacing="10.0">
         <children>
            <ImageView fx:id="chip1" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="chip10" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="chip50" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="chip100" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="chip250" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="chip500" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="90.0" prefWidth="90.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleInsurrance" prefHeight="40.0" prefWidth="90.0" text="Insurrance" />
                  <Button mnemonicParsing="false" onAction="#handleSplit" prefHeight="40.0" prefWidth="90.0" text="Split" />
               </children>
            </VBox>
            <VBox prefHeight="90.0" prefWidth="90.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleDouble" prefHeight="40.0" prefWidth="90.0" text="Double" />
                  <Button mnemonicParsing="false" onAction="#handleStand" prefHeight="40.0" prefWidth="90.0" text="Stand" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleHit" prefHeight="90.0" prefWidth="90.0" text="Hit" />
         </children>
      </HBox>
      <ImageView fx:id="imgViewBack" fitHeight="48.0" fitWidth="66.0" layoutX="844.0" layoutY="14.0" onMouseClicked="#handleBack" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
